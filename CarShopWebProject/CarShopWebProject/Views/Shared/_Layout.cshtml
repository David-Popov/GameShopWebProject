
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CarShopWebProject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body style="background-color:#241f24;">
    <header>
        <div class="row text-center align-content-center justify-content-center" style="background-color:#FC4445;">
                <img class="logo" style="margin-left:15px;" src="~/images/—Pngtree—vector video game icon_4101457.png" />
                <div class="form-group col-md-3">
                    <label style="color:#FC4445; font-family:Arial;" asp-=""></label>
                    <input style="margin-top:25px; height:2.5rem; width:20rem;" placeholder="Search game..." />
            </div>
        </div>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light   box-shadow mb-3" style="border:none; background-color:#FC4445;  font-family:'Popinz'; font-size:20px;">
            <div class="container">
                <a class="navbar-brand" style="color:white; font-family:Arial;"  asp-area="" asp-controller="Home" asp-action="Index">Game Shop</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                   <partial name="_PlatformsPartial" />
                   <ul class="navbar-nav flex-grow-1" style="font-family: Arial">
                       <li class="nav-item">
                           <a class="nav-link " style="color: white;" asp-controller="Product" asp-action="Add">Add</a>
                       </li>
                       <li class="nav-item">
                           <a class="nav-link " style="color:white;" asp-controller="Home" asp-action="Privacy">Privacy</a>
                       </li>
                      
                       </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted text-white" style="background-color: #FC4445">
        <div class="container text-white">
            &copy; 2021 - GameShop - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
