@model List<ProductFormModel>

@{
    ViewData["Title"] = "Home Page";
}

@{
    var firstProduct = Model[0];
    var secondProduct = Model[1];
    var thirdProduct = Model[2];

}

<div id="carouselExampleControls" class="carousel slide mt-4" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="@firstProduct.ImageUrl" alt="First slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="@secondProduct.ImageUrl" alt="Second slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="@thirdProduct.ImageUrl" alt="Third slide">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row mt-3" style="margin-top:10px;">
    @foreach (var game in Model)
    {
        <div class="" style="margin-top:10px;">
            <div class="card" style="width: 18rem;">
                <img src="@game.ImageUrl" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">@game.Tittle</h5>
                    <p class="card-text">@game.Company</p>
                    <p class="card-text">@game.Description</p>
                    <div class="card-bottom">
                        <p class="card-price card-text">@game.Price<span>$</span></p>
                        <a href="#" class="btn btn-primary">Buy</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>